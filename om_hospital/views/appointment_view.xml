<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"></field>
                            <field name="appointment_time"></field>
                            <field name="booking_date"  optional="show"></field>
                     <field name="state" decoration-success="state == 'done'" decoration-info="state in ('draft','in_consultation')" decoration-danger="state == 'cancelled'" widget="badge"></field>

            </tree>
        </field>
    </record>





    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                 <header>
                     <field name="state" widget="statusbar" nolabel="1" options="{'clickable': '1'}"
                       statusbar_visible="draft,in_consultation,done"/>
                  </header>

                  <sheet>
                   <div class="oe_title">
                       <h1>
                            <field name="priority" widget="priority" class="mr-3"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="patient_id"></field>
                            <field name="ref"></field>
                            <field name="booking_date"></field>
                        </group>

                        <group>
                            <field name="gender"></field>
                            <field name="appointment_time"></field>
                            <button name="action_test" string="Test Button"  confirm="Are you sure?" type="object" class="oe_highlight"/>
                            <button name="%(om_hospital.action_hospital_patient)d" string="Action Button" type="action" confirm="Are you sure?" help="Click to redirect to patient" class="oe_highlight"/>

                        </group>
                    </group>

                    <notebook>
                        <page string="Prescription" name="prescription">
                            <field name="prescription" placeholder = "Enter your prescription"></field>

                        </page>
                        <page string="Pharmacy" name="pharmacy">
                            <field name="pharmacy_line_ids">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="qty"/>
                            </tree>
                            <form>
                                <field name="product_id"/>
                                <field name="qty"/>
                            </form>
                            </field>    >
                        </page>
                    </notebook>

                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


